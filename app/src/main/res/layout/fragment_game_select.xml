<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".GameSelectFragment">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_game1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="인물\n맞추기"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_game2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="사물\n맞추기"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_game3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="초성\n맞추기"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_game4"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:text="4글자\n이어말하기"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_game5"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="그림\n이어맞추기"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_gameSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임 선택"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_gameEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종료"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <Button
        android:id="@+id/btn_showScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="점수판"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />


</androidx.constraintlayout.widget.ConstraintLayout>